<h1 class="text-center mt-4"> Create a new hashtag </h1>
<div class="container-xl">
    <div class="row justify-content-center">
        <div class="col-10">
            <%=render 'shared/errors', obj: @hashtag%>
            <%= form_with(model: @hashtag, class:"shadow p-3 mb-3 bg-info rounded", local: true) do |f|%>
                <div class="form-group row">
                    <%= f.label :name, "Hashtag #name", class: "col-2 col-form-label text-white"%> <br/>
                    <div class="col-10"><%= f.text_field(:name, class: "form-control shadow rounded", placeholder: "Enter a hashtag name")%></div>
                </div> <br>
                <div class="form-group row justify-content-center"><%= f.submit(class:"btn btn-outline-light btn-lg")%></div>
            <%end%>
        </div>
    </div>
</div>

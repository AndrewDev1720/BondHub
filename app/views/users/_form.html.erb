<div class="container-xl">
    <div class="row justify-content-center">
        <div class="col-10">
            <%=render 'shared/errors', obj: @user%>
            <%= form_with(model: @user, class:"shadow p-3 mb-3 bg-info rounded", local: true) do |f|%>
                <div class="form-group row">
                    <%= f.label :username, class: "col-2 col-form-label text-white"%> <br/>
                    <div class="col-10"><%= f.text_field(:username, class: "form-control shadow rounded", placeholder: "Enter a username")%></div>
                </div> <br>
                <div class="form-group row">
                    <%= f.label :email, class: "col-2 col-form-label text-light"%> <br/>
                    <div class="col-10"><%= f.email_field :email, class: "form-control shadow rounded", placeholder:"Enter your email address"%></div>
                </div> <br>
                <div class="form-group row">
                    <%= f.label :password, class: "col-2 col-form-label text-light"%> <br/>
                    <div class="col-10"><%= f.password_field :password, class: "form-control shadow rounded", placeholder:"Enter your password"%></div>
                </div> <br>
                <div class="form-group row">
                    <%= f.label :avatar, class: "col-2 col-form-label text-light"%> <br/>
                    <div class="col-10"><%= f.file_field :avatar, class: "form-control shadow rounded", placeholder:"Enter your password"%></div>
                </div> <br>
                <div class="form-group row justify-content-center"><%= f.submit(@user.new_record? ? "Sign Up" : "Update account", class:"btn btn-outline-light btn-lg")%></div>
            <%end%>

            <%if logged_in?()%>
                <div class="form-group row justify-content-center">
                    <%= link_to "Back to your profile", user_path, method: :get, class:"btn btn-secondary"%>
                    <%if @user.valid?%>
                        <%= link_to "Delete your profile", user_path(@user.id), method: :delete, data:{confirm: "Are you sure?"}, class:"btn btn-danger", style: "margin-left: 10px"%>
                    <%end%>
                </div>
            <%end%>
        </div>

    </div>
</div>

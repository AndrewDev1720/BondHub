<div class="container-xl">
    <div class="row justify-content-center">
        <div class="col-8">
            <%= form_with(model: @comment, class:"shadow p-2 mb-2 bg-dark rounded", local: true) do |f|%>
                <div class="form-group row">
                    <%= f.label :rely, class: "col-2 col-form-label text-black"%> <br/>
                    <div class="col-9"><%= f.text_field(:body, class: "form-control shadow rounded", placeholder: "Comment to this post")%></div>
                </div>
                <div class="form-group row">
                    <div class="col-9"><%= f.hidden_field :user_id, value: current_user.id, rows: 9%></div>
                    <div class="col-9"><%= f.hidden_field :commentable_type, value: "Comment", rows: 9%></div>
                    <div class="col-9"><%= f.hidden_field :commentable_id, value: comment.id, rows: 9%></div>
                    <div class="col-9"><%= f.hidden_field :homepage_id, value: params[:id], rows: 9 if params[:id] != nil%></div>
                </div>
                <div class="form-group row justify-content-center"><%= f.submit :Reply, class:"btn btn-outline-light btn-dark"%></div>
            <%end%>
        </div>

    </div>

</div>

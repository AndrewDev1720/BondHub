<h1 class ="text-center mt-4">BondsFeed</h1>
    <div class="row justify-content-xl-center">
        <div class="col-9 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded   ">
            <div class="card-header font-italic">Author: <%= link_to(@article.user.username, user_path(@article.user)) if @article.user%></div>
            <div class="card-body">
                <h5 class="card-title"><%= link_to @article.title, article_path(@article.id), class: "text-success"%></h5>
                <div class = "card-text text-left"> <%=simple_format(@article.description, length:100)%></div>
                <%= link_to "Back", articles_path, class:"btn btn-outline-success"%>
                <%if logged_in?() && (current_user().admin?() or current_user.id == @article.user_id)%>
                <%= link_to "Edit", edit_article_path(@article.id), class:"btn btn-outline-primary"%>
                <%= link_to "Delete", article_path(@article.id), method: :delete, data:{confirm: "Are you sure?"}, class:"btn btn-outline-danger"%>
                <%end   %>
            </div>
            <div class="card-footer text-muted">
                    <p>Created <%= time_ago_in_words(@article.created_at)%> ago,
                        edited <%= time_ago_in_words(@article.updated_at)%> ago.</p>
            </div>
            </div>
        </div>
    </div>
</div>


<h4 class="ui center aligned medium icon header">
  <i class="circular comment outline icon"></i>
  BondChat
</h4>
<div class = "container" id = "chatroom">
  <div class="ui two column grid">
    <div class="twelve wide column">
      <div class="ui fluid raised card chatbox">
        <div class="content" id="messages">
          <div class="ui feed" id="message-container">
            <%= render @messages %>
          </div>
        </div>
        <div class="extra content">
          <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path, remote: true) do |f| %>
            <div class="field">
              <div class="ui fluid icon input">
                <%= f.text_field :body %>
                <%= f.hidden_field :chatroom_id, value: params[:id]%>
                <%= f.button '<i class="bordered inverted orange edit icon"></i>'.html_safe %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="four wide column">
      <div class="ui fluid raised card chatbox">
        <div class="content">
          <div class="ui inverted vertical menu">
            <%=link_to 'Home', root_path, class: "active item"%>
            <%=link_to 'Connections', user_connection_path(current_user), class: "item"%>
            <%=link_to 'Game', game_path, class: "item"%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
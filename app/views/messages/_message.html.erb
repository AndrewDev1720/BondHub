<div class="event">
  <div class="content">
    <div class="summary">
      <%if message.user.id == current_user.id%>
        <div class = "right aligned">
          <em><%= message.user.username %></em>: <%= message.body%>
        </div>
      <%else%>
        <div class = "left aligned">
          <em><%= message.user.username %></em>: <%= message.body%>
        </div>
      <%end%>
    </div>
  </div>
</div>
<div class="container">
    <%for user in @users%>
        <div class="row justify-content-xl-center">
            <div class="col-9 mt-4">
                <div class="card text-center shadow mb-5 bg-white rounded   ">
                 <div class="card-header font-italic"><strong><%=link_to(user.username, user_path(user.id))%></strong></div>
                <div class="card-body">
                <%= avatar_for(user, style: "height: 150px")%>
                <p class="card-text", style = "margin-top: 15px"><%=pluralize((user.articles.count), "article")%></p>
                <p class="card-text", style = "margin-top: 15px">Email address: <%=user.email%></p>
                <%= link_to("View", user_path(user.id), class:"btn btn-outline-success")%>
                <%if logged_in?() && current_user.id == user.id%>
                    <%= link_to "Edit Profile", edit_user_registration_path(user.id), class:"btn btn-outline-primary"%>
                <%end%>
                <%if logged_in?() && current_user.admin == true%>
                    <%= button_to "Delete Profile", user_path(user.id),data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-outline-danger"%>
                <%end%>
                <%#= link_to "Delete", article_path(article.id), method: :delete, data:{confirm: "Are you sure?"}, class:"btn btn-outline-danger"%>
                </div>
                <div class="card-footer text-muted">
                    <p>Joined <%= time_ago_in_words(user.created_at)%> ago,
                        last activity: <%= time_ago_in_words(user.updated_at)%> ago.</p>
                </div>
                </div>
            </div>
        </div>
    <%end%>
</div>


